{
  "name": "chessjs_server",
  "version": "1.0.0",
  "description": "Chess server",
  "main": "index.js",
  "scripts": {
    "build:ui": "rm -rf build && cd ../chessjs_client/chessjs_client/ && npm run build --prod && cp -r build ../../chessjs_server/",
